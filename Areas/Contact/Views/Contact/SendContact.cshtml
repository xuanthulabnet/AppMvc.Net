@model App.Models.Contacts.Contact

@{
    ViewData["Title"] = "Gửi liên hệ tới AppMvc";
}

<div class="row">
    <div class="col-md-4">
        <div class="contact-firstcol p-2 h-100">
            <img src="~/images/email.png" />
            <h1>@ViewData["Title"]</h1>
            <h4>Chúng tôi luôn lắng nghe các ý kiến của bạn !</h4>
        </div>
    </div>
    <div class="col-md-8">
        <form asp-action="SendContact" class="formcontact">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
 

            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

             <div class="form-group">
                <label asp-for="Message" class="control-label"></label>
                <textarea rows="5" asp-for="Message" class="form-control"></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Gửi liên hệ" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


