@model IdentityRole
@using App.Menu
@inject AdminSidebarService _AdminSidebarService
@{
    ViewData["Title"] = "Xóa role";
    Layout =  "/Views/Shared/_LayoutAdmin.cshtml";
}
<partial name="_StatusMessage"></partial>

<hr>

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
         
            <p>Bạn có chắc chắn xóa <strong>@Model.Name</strong></p>
            <div class="form-group">
                <input type="submit" value="Đồng ý" class="btn btn-danger" />
                <a class="btn btn-primary" asp-action="Index">Danh sách các role</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@{
    _AdminSidebarService.SetActive("Role", "Index", "Identity");
}

@section Sidebar
{
    @Html.Raw(_AdminSidebarService.renderHtml())
}

